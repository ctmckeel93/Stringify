@{
    ViewData["Title"] = "Chords";
    ViewData["CurrPage"] = "chords";
    string pageSet = "";
    string[] notes = {"C","C#","Db","D","D#","Eb","E", "F", "F#", "Gb","G","G#","Ab","A","A#","Bb","B"};
    string[] tritone = {" ","m","dim","aug","maj7","7","m7","dim7","m(maj7)","m7b5","sus2","sus4","6","6/9","9","11","13","5"};
}

    <form action="/change-page" method="post">
        <select class="form-control" name="instrument" id="page">
            <option value="guitar">guitar</option>
            <option value="piano">piano</option>
        </select><span><input class="btn btn-dark" type="submit" value="Reload page"></span>
    </form>




<div class="text-center">
    <h1>Chords</h1>

    <p>All the chords</p>
    @for (int i = 0; i < notes.Length; i++)
    {
        <div class="chord-list">

            <h1>@notes[i]</h1>
            @for (int j = 0; j < tritone.Length; j++)
            {
                string chord = "";
                chord = $"{notes[i]}{tritone[j]}";
                

                <a href="/chords/@chord/@ViewBag.Instrument"><ins class=" scales_chords_api" instrument="@ViewBag.Instrument" chord="@chord"></a>
            }
        </div>

    }
    
</div>